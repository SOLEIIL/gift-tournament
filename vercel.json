{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist",
        "buildCommand": "npm run build"
      }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/inventory-webhook",
      "dest": "/api/inventory-webhook.js"
    },
    {
      "src": "/api/telegram-webhook",
      "dest": "/api/telegram-webhook.js"
    },
    {
      "src": "/api/gift-status",
      "dest": "/api/gift-status.js"
    },
    {
      "src": "/api/inventory-status",
      "dest": "/api/inventory-status.js"
    },
    {
      "src": "/api/user-inventory",
      "dest": "/api/user-inventory.js"
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  },
  "functions": {
    "api/*.js": {
      "maxDuration": 30
    }
  }
}
